Vagrant.configure("2") do |config|
  config.vm.define "vm-admin" do | cfg|
    cfg.vm.provider "virtualbox" do |vb|
      config.vm.box = "bento/ubuntu-22.04"
      config.vm.box_version = "202309.08.0"

      cfg.vm.network "private_network", ip: "192.168.10.10"
      cfg.vm.hostname = "vm-admin"
      vb.name = "vm-admin"
      vb.customize ["modifyvm", :id, "--ioapic", "on"]
      vb.customize ["modifyvm", :id, "--cpu", "2"]
      vb.customize ["modifyvm", :id, "--memory", "10000"]
        
      etcHosts = "echo '192.168.10.10 vm-admin vm-admin@mitterand.com' >> /etc/hosts \n"
      cfg.vm.provision  :shell, :inline => etcHosts
      cfg.vm.provision :shell, :inline => "sudo apt update  -qq 2&>1 > /dev/null"
    end

  
  end
end